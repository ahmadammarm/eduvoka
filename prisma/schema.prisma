generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum Role {
  USER
  ADMIN
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING
}

enum Minat {
  VISUAL
  AUDIOTORY
  KINESTETIK
}

enum TipeCourse {
  GRATIS
  PREMIUM
}

enum UTBKSection {
  LITERASIBINDO
  LITERASIBINGG
  PENALANRANMAT
  PU // pengetahuan umum
  PBM // pemahaman bacaan dan menulis
  PPU // pengetahuan dan pemahaman umum
  PK // Penegathuan kuantitatif

}

enum QuestionType {
  PG        // Pilihan ganda
}

enum TryoutStatus {
  DRAFT
  PUBLISHED
  CLOSED
}


// Users
model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  photo     String?
  role      Role       @default(USER)
  status    Status  @default(INACTIVE)
  minat     Minat?
  payments  Payments[]
  attempts UserTryout[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}


// Payments
model Payments {
  id String @id @default(uuid())
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount Float
  status Status @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// TO
model Tryout {
  id          String   @id @default(uuid())
  title       String
  description String?
  duration    Int
  status      TryoutStatus @default(DRAFT)

  sections    TryoutSection[]
  attempts    UserTryout[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model TryoutSection {
  id        String @id @default(uuid())
  tryoutId  String
  tryout    Tryout @relation(fields: [tryoutId], references: [id], onDelete: Cascade)

  section   UTBKSection
  duration  Int

  questions Question[]
}

// question
model Question {
  id        String @id @default(uuid())
  sectionId String
  section   TryoutSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  question  String
  type      QuestionType @default(PG)

  options   Option[]
  explanation Explanation?
  userAnswers UserAnswer[]

  createdAt DateTime @default(now())
}

model Option {
  id         String @id @default(uuid())
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  label      String
  text       String
  isCorrect  Boolean @default(false)

  userAnswers UserAnswer[]
}

model Explanation {
  id         String @id @default(uuid())
  questionId String @unique
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  content    String
}

// USER TRYOUT & ANSWER
model UserTryout {
  id        String @id @default(uuid())
  userId    String
  tryoutId  String

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tryout    Tryout @relation(fields: [tryoutId], references: [id], onDelete: Cascade)

  score     Float?
  startedAt DateTime @default(now())
  finishedAt DateTime?

  answers   UserAnswer[]
}

model UserAnswer {
  id           String @id @default(uuid())
  userTryoutId String
  questionId   String
  optionId     String?

  userTryout   UserTryout @relation(fields: [userTryoutId], references: [id], onDelete: Cascade)
  question     Question   @relation(fields: [questionId], references: [id])
  option       Option?    @relation(fields: [optionId], references: [id])

  isCorrect    Boolean

  @@unique([userTryoutId, questionId])
}
