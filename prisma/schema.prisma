generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
}


// ENUMS


enum Role {
  USER
  ADMIN
}

enum Status {
  ACTIVE
  INACTIVE
}

enum LearningStyle {
  VISUAL
  AUDITORY
  KINESTHETIC
}

enum UTBKSection {
  PU               // Pengetahuan Umum
  PBM              // Pemahaman Bacaan & Menulis
  PPU              // Pengetahuan & Pemahaman Umum
  PK               // Pengetahuan Kuantitatif
  LITERASIBINDO
  LITERASIBINGG
}

enum QuestionType {
  PG
}

enum TryoutStatus {
  DRAFT
  PUBLISHED
  CLOSED
}


// USER & AUTH


model User {
  id            String        @id @default(uuid())
  name          String
  email         String        @unique
  password      String?
  photo         String?
  role          Role          @default(USER)
  status        Status        @default(ACTIVE)
  learningStyle LearningStyle?

  accounts      Account[]
  sessions      Session[]
  attempts      UserTryout[]
  payments      Payment[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}


// PAYMENT


model Payment {
  id        String   @id @default(uuid())
  userId    String
  amount    Float
  status    Status  @default(INACTIVE)

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


// TRYOUT


model Tryout {
  id          String   @id @default(uuid())
  title       String
  description String?
  duration    Int
  status      TryoutStatus @default(DRAFT)

  sections    TryoutSection[]
  attempts    UserTryout[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TryoutSection {
  id        String @id @default(uuid())
  tryoutId  String
  section   UTBKSection
  duration  Int

  tryout    Tryout   @relation(fields: [tryoutId], references: [id], onDelete: Cascade)
  questions Question[]
}


// QUESTION


model Question {
  id        String @id @default(uuid())
  sectionId String
  question  String @db.Text
  type      QuestionType @default(PG)

  section   TryoutSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  options   Option[]
  explanations Explanation[]
  answers   UserAnswer[]

  createdAt DateTime @default(now())
}

model Option {
  id         String  @id @default(uuid())
  questionId String
  label      String
  text       String
  isCorrect  Boolean @default(false)

  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  answers    UserAnswer[]
}


// PERSONALIZED EXPLANATION (CORE FEATURE)


model Explanation {
  id            String        @id @default(uuid())
  questionId    String
  learningStyle LearningStyle

  content       String        @db.Text
  mediaUrl      String?       // image / audio / video

  question      Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([questionId, learningStyle])
}


// USER TRYOUT & ANSWERS


model UserTryout {
  id        String @id @default(uuid())
  userId    String
  tryoutId  String

  score     Float?
  startedAt DateTime @default(now())
  finishedAt DateTime?

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tryout    Tryout @relation(fields: [tryoutId], references: [id], onDelete: Cascade)
  answers   UserAnswer[]

  @@unique([userId, tryoutId])
}

model UserAnswer {
  id           String @id @default(uuid())
  userTryoutId String
  questionId   String
  optionId     String?

  isCorrect    Boolean

  userTryout   UserTryout @relation(fields: [userTryoutId], references: [id], onDelete: Cascade)
  question     Question   @relation(fields: [questionId], references: [id])
  option       Option?    @relation(fields: [optionId], references: [id])

  @@unique([userTryoutId, questionId])
}
